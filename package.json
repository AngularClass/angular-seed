{
  "name": "@tipe/graphql-flex",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "yarn build-lib",
    "build-cdn": "yarn build-app",
    "build-lib": "vue-cli-service build --target lib --name graphql-flex src/components/GraphQLFlex.vue",
    "build-app": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test:unit",
    "ci": "yarn lint && yarn test",
    "precommit": "lint-staged && yarn test",
    "travis-deploy-once": "travis-deploy-once --pro",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "linters": {
      "*.{js,vue}": [
        "eslint --fix",
        "git add"
      ]
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "main": "dist/graphql-flex.common.js",
  "dependencies": {
    "codemirror": "^5.39.2",
    "codemirror-graphql": "^0.6.12",
    "graphql": "^0.13.2",
    "graphql-fetch": "^1.0.1",
    "lodash.merge": "^4.6.1",
    "markdown-it": "^8.4.2",
    "vue": "^2.5.17",
    "vue-codemirror": "^4.0.5",
    "vue-codemirror-lite": "^1.0.4",
    "vue-types": "^1.3.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.2",
    "@tipe/eslint-config-tipe": "^2.0.0",
    "@vue/cli-plugin-babel": "^3.0.1",
    "@vue/cli-plugin-eslint": "^3.0.1",
    "@vue/cli-plugin-unit-jest": "^3.0.1",
    "@vue/cli-service": "^3.0.1",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-plugin-vue": "^4.7.1",
    "eslint-plugin-vue-types": "^0.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "semantic-release": "^15.9.9",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "travis-deploy-once": "^5.0.3",
    "vue-template-compiler": "^2.5.17",
    "yorkie": "^2.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "@tipe/eslint-config-tipe/vue",
      "plugin:vue-types/strongly-recommended"
    ],
    "settings": {
      "vue-types/namespace": [
        "VueTypes",
        "vueTypes"
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tipeio/graphql-flex.git"
  },
  "release": {
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ],
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "docs",
          "scope": "README",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "style",
          "release": "patch"
        }
      ],
      "parserOpts": {
        "noteKeywords": [
          "BREAKING CHANGE",
          "BREAKING CHANGES",
          "BREAKING"
        ]
      }
    }
  }
}
